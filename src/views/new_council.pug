            input#tendetai.form-control.form-control-sm(type='text', name='name', value='')
        
        .col-md-12
          .form-group
            label.control-label Chủ tịch
            select#userDropdown1.form-control.form-control-sm.select2(name='chairman')
              option(value="" disabled selected) Chọn Chủ tịch

        .col-md-12
          .form-group
            label.control-label Thư ký
            select#userDropdown2.form-control.form-control-sm.select2(name='secretary')
              option(value="" disabled selected) Chọn Thư ký

        .col-md-12
          .form-group
            label.control-label Uỷ viên 1
            select#userDropdown3.form-control.form-control-sm.select2(name='member1')
              option(value="" disabled selected) Chọn Uỷ viên 1

        .col-md-12
          .form-group
            label.control-label Uỷ viên 2
            select#userDropdown4.form-control.form-control-sm.select2(name='member2')
              option(value="" disabled selected) Chọn Uỷ viên 2
                                                        
      .row 
        .col-md-10            

      .card-footer.border-top.border-info
        .d-flex.w-100.justify-content-center.align-items-center
          button.btn.btn-flat.bg-gradient-primary.mx-2(type='submit') Lưu
          button.btn.btn-flat.bg-gradient-secondary.mx-2(type='button', onclick="location.href='/councillist'") Hủy bỏ
style.
  .box-council {
    margin-top: 100px;
    margin-right: 250px;
    margin-left: 250px;
  }
  .card-footer {
    margin-top: 50px;
  }
  .form-group-1 {
    display: none;
  }
  
script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
script.
  document.addEventListener('DOMContentLoaded', function() {
    // Gọi API để lấy danh sách người dùng bằng Axios
    axios.get('/api/v1/users')
    .then(function(response) {
      // Lấy dữ liệu người dùng từ phản hồi
      const users = response.data.data;
      // Đổ dữ liệu vào thanh chọn
      const userDropdowns = document.querySelectorAll('.form-group select[id^="userDropdown"]');
      users.forEach(function(user) {
      
      const option = document.createElement('option');
      option.value = user._id;
      option.text = `${user.name} id:${user.id}`;
      userDropdowns.forEach(function(userDropdown) {
          userDropdown.appendChild(option.cloneNode(true));
      });
      });
    })
    .catch(function(error) {
      console.error('Error fetching user data:', error);
    });
  });
